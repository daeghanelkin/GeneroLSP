{
  "IF Statement": {
    "prefix": ["if"],
    "body": ["if ($1) then", "\t$0", "end if"],
    "description": "IF Statement"
  },
  "FUNCTION Declaration": {
    "prefix": ["function"],
    "body": ["function ${1:functionName}($2)", "\t$0", "end function"],
    "description": "Function Declaration"
  },
  "METHOD Declaration": {
    "prefix": ["function"],
    "body": ["function ($1) ${2:functionName}($3)", "\t$0", "end function"],
    "description": "Method Declatation"
  },
  "IF-ELSE Statement": {
    "prefix": ["if else"],
    "body": ["if ($1) then", "\t$2", "else", "\t$3", "end if"],
    "description": "IF ELSE Statement"
  },
  "FOR Loop": {
    "prefix": ["for"],
    "body": ["for ${1:counter} = ${2:startValue} to ${3:endValue}", "\t$0", "end for"],
    "description": "FOR Loop"
  },
  "WHILE Loop": {
    "prefix": ["while"],
    "body": ["while (${1:condition})", "\t$0", "end while"],
    "description": "WHILE Loop"
  },
  "CASE Statement": {
    "prefix": ["case"],
    "body": ["case $1", "\twhen $2", "\t\t$3", "\totherwise", "\t\t$4", "end case"],
    "description": "CASE Statement"
  },
  "PREPARE Statement": {
    "prefix": ["prepare"],
    "body": ["prepare ${1:queryName}", "\tfrom \"$0\""],
    "description": "PREPARE Statement"
  },
  "EXECUTE Query": {
    "prefix": ["execute"],
    "body": ["execute ${1:queryName}", " using $2", "\tinto $3", "ExceptionState.setSQLException(\"$4\")"],
    "description": "EXECUTE Query"
  }
}